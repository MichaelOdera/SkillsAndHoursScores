<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="3dp"
    android:background="@drawable/rounded_background"
    android:elevation="3dp"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/leadersUserImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/imageholder"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leadersNameHourTextView"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/minny_minny"/>

            <TextView
                android:id="@+id/leadersHoursScoreAndCountryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_country_name"/>

        </LinearLayout>

</LinearLayout>